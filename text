--Settings--
local ESP = {
    Enabled = false,
    Boxes = true,
    BoxShift = CFrame.new(0,-1.5,0),
	BoxSize = Vector3.new(4,6,0),
    Color = Color3.fromRGB(255, 255, 255),  -- 固定白色
    FaceCamera = false,
    Names = true,
    TeamColor = true,
    Thickness = 2,
    AttachShift = 1,
    TeamMates = true,
    Players = true,
    Tracers = false,
    
    Objects = setmetatable({}, {__mode="kv"}),
    Overrides = {}
}

-- GUI 设置
local GUIEnabled = false
local ShowDistance = false  -- 默认关闭距离显示

-- 创建GUI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "ESPConfigGUI"
screenGui.Enabled = false

